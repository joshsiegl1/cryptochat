{
  "expo": {
    "name": "Cryptochat",
    "description": "A chat application for crypto-currency",
    "slug": "crypto-chat",
    "privacy": "public",
    "sdkVersion": "28.0.0",
    "platforms": [
      "ios",
      "android"
    ],
    "version": "1.5.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.joshsiegl.cryptochat",
      "buildNumber": "1.5.0",
      "supportsTablet": true, 
      "infoPlist": { 
        "NSLocationAlwaysUsageDescription" : "location", 
        "NSPhotoLibraryUsageDescription" : "Allow Cryptochat to display the photos you choose on our platform."
      }
    },
    "android": {
      "package": "com.joshsiegl.cryptochat",
      "versionCode": 14
    }
  }
}